<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IsPackable>true</IsPackable>
    <PackageId>Nerdigy.Mediator.DependencyInjection</PackageId>
    <Version>0.1.0</Version>
    <Authors>Nerdigy</Authors>
    <Company>Nerdigy</Company>
    <Description>Dependency injection registration, assembly scanning, and runtime options for Nerdigy mediator.</Description>
    <PackageTags>mediator;dependency-injection;di;cqrs;dotnet</PackageTags>
    <PackageProjectUrl>https://github.com/nerdigy/mediator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nerdigy/mediator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nerdigy.Mediator\Nerdigy.Mediator.csproj" />
    <ProjectReference Include="..\Nerdigy.Mediator.Abstractions\Nerdigy.Mediator.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
